{
  "manifest_version": 2,
  "name": "BugBox",
  "version": "1.1.1",

  "description": "On-site Issue Reporting",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },

  "browser_action": {
    "default_icon": "icon-128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["bugbox.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "<all_urls>",
    "storage",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}
